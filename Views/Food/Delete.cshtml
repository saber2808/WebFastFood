@model WebFastFood.Models.Food

@{
    ViewBag.Title = "Delete";
}


@using (Html.BeginForm("Delete", "Food", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    <div>
        <h1>Xóa món ăn</h1>
        <hr />
        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.IDFood)
            </dt>

            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.IDFood)
            </dd>

            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.NameFood)
            </dt>

            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.NameFood)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Price)
            </dt>

            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Price)
            </dd>

            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.ImageFood)
            </dt>

            <dd class="col-sm-10">
                <img src="@Url.Content(Model.ImageFood)" height="100" width="100" id="previewImg" />
            </dd>

        </dl>


        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Xóa" class="btn btn-default" />
            <a href="~/Food/Index" class="btn btn-default" style="margin-left:10px">Quay lại</a>
        </div>

    </div>
}