@model WebFastFood.Models.Food
@using WebFastFood.Models

@{
    ViewBag.Title = "Create";
}

<h2>Tạo mới món ăn</h2>
<hr />
@using (Html.BeginForm("Create", "Food", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    <form >
        <div class="form-group">
            @Html.LabelFor(model => model.IDFood, htmlAttributes: new { @class = "control-label" })
            @Html.EditorFor(model => model.IDFood, new { htmlAttributes = new { @class = "form-control" } })
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.NameFood, htmlAttributes: new { @class = "control-label" })
            @Html.EditorFor(model => model.NameFood, new { htmlAttributes = new { @class = "form-control" } })
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.Detail, htmlAttributes: new { @class = "control-label" })
            @Html.EditorFor(model => model.Detail, new { htmlAttributes = new { @class = "form-control" } })
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.IDCategoryFood, htmlAttributes: new { @class = "control-label" })
            @Html.DropDownListFor(model => model.IDCategoryFood, (SelectList)ViewBag.listCF, new { @class = "form-control" })
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.Amount, htmlAttributes: new { @class = "control-label" })
            @Html.EditorFor(model => model.Amount, new { htmlAttributes = new { @class = "form-control", min = "1" } })
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.Price, htmlAttributes: new { @class = "control-label" })
            @Html.EditorFor(model => model.Price, new { htmlAttributes = new { @class = "form-control" } })
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.ImageFood, htmlAttributes: new { @class = "control-label" })
            <img src="@Url.Content(Model.ImageFood)" height="150" width="150" id="previewImg" />
        </div>
        <div class="form-group">
            <div class="col-md-10">
                <input type="file" name="UploadImage" onchange="ChangeImage(this, document.getElementById('previewImg'))" />
            </div>
        </div>
        <div class="form-group ">
            <div class="col-md-offset-2 col-md-10  ">
                <input type="submit" value="Tạo mới" class="btn btn-default  " />
                <a href="~/Food/Index" class="btn btn-default" style="margin-left:10px">Quay lại</a>
            </div>
        </div>
    </form>
}
