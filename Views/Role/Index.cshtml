@model IEnumerable<WebFastFood.Models.Role>

@{
    ViewBag.Title = "Index";
}

<h1>Danh sách chức vụ</h1>
<hr />
<a href="~/Role/Create" class="btn btn-default" style="margin-bottom:10px">Tạo mới</a>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.IDRole)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.NameRole)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.IsAdmin)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
<tr>
    <td>
        @Html.DisplayFor(modelItem => item.IDRole)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.NameRole)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.IsAdmin)
    </td>
    <td>
        @Html.ActionLink("Sửa", "Edit", new { id = item.ID }) |
        @Html.ActionLink("Chi tiết", "Details", new { id = item.ID }) |
        @Html.ActionLink("Xóa", "Delete", new { id = item.ID })
    </td>
</tr>
}

</table>
