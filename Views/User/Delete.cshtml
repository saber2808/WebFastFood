@model WebFastFood.Models.User

@{
    ViewBag.Title = "Delete";
}

<div>
    <h1>Xóa nhân viên</h1>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ID)
        </dt>

        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ID)
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.NameUser)
        </dt>

        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.NameUser)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.IDRole)
        </dt>

        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Role.NameRole)
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ImageUser)
        </dt>

        <dd class="col-sm-10">
            <img src="@Url.Content(Model.ImageUser)" height="100" width="100" id="previewImg" />
        </dd>

    </dl>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Xóa" class="btn btn-default" />
            <a href="~/User/Index" class="btn btn-default" style="margin-left:10px">Quay lại</a>
        </div>
    }
</div>
