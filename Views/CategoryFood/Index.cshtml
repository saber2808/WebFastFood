@model IEnumerable<WebFastFood.Models.CategoryFood>

@{
    ViewBag.Title = "Index";
}

<h1>Danh sách loại món ăn</h1>
<hr />
<a href="~/CategoryFood/Create" class="btn btn-default" style="margin-bottom:10px">Tạo mới</a>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.IDCategoryFood)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.NameCategoryFood)
        </th>
        
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.IDCategoryFood)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NameCategoryFood)
            </td>
            <td>
                @Html.ActionLink("Sửa", "Edit", new { id = item.ID }) |
                @Html.ActionLink("Chi tiết", "Details", new { id = item.ID }) |
                @Html.ActionLink("Xóa", "Delete", new { id = item.ID })
            </td>
        </tr>
    }

</table>
